package chap01;
import java.util.Scanner;

//1,2,...n의 값을 구한다

public class SumWhile {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		int sum = 0;
		
		System.out.println("1부터 n까지의 합을 구합니다.");
		System.out.print("n의 값 : ");
		int n = scan.nextInt();
		
		while(n<=0) {
			
			sum +=n;
			
		}
		
		System.out.println(sum);

	}

}
